{
  "functions": {
    "source": ".",
    "ignore": [
      ".circleci",
      ".DS_Store",
      ".firebase",
      ".git",
      ".vscode",
      "build/public/**",
      "coverage",
      "migrations",
      "node_modules",
      "public",
      "scripts",
      "seeds",
      "src",
      ".babelrc",
      ".editorconfig",
      ".env.local",
      ".env.*.local",
      ".eslintrc",
      ".gitattributes",
      ".gitignore",
      ".prettierignore",
      ".prettierrc",
      "knexfile.js",
      "LICENSE.txt",
      "README.md",
      "schema.graphql",
      "storage.rules",
      "yarn-debug.log*",
      "yarn-error.log*"
    ]
  },
  "hosting": {
    "public": "build/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      }
    ],
    "headers": [
      {
        "source": "service-worker.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    }
}
